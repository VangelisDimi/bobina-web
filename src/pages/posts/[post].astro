---
import BasePage from '../../layouts/BasePage.astro';
import BlogPost from '../../components/BlogPost.astro';

import { parse } from 'node-html-parser';

import wordpress from '../../wordpress';

// categorize posts using the slug since slugs are guaranteed unique by wordpress
// this generates prettier urls and makes it easier to find posts
export async function getStaticPaths() {
	const {
		data: { posts },
	} = await wordpress.getPosts(100);

	return posts.map((p) => ({
		params: {
			post: decodeURI(p.slug),
		},
		props: {
			post_obj: p,
		},
	}));
}

const post = Astro.props.post_obj;
// const img = Object.values(post.attachments)[0]?.URL;
const img = post.featured_image;
const content = {
	title: parse(post.title).text,
	description: wordpress.getExcerptFromPost(post),
	publishDate: post.date,
	author: 'test',
	heroImage: img,
	alt: post.slug,
	text: post.content,
	id: post.ID,
	slug: post.slug,
	tags: post.tags,
};

// console.log(post.content)
---

<BasePage
	title={content.title}
	description={content.description}
	permalink={'/posts/' + content.slug}
>
	<BlogPost
		title={content.title}
		author={content.author}
		tags={content.tags}
		publishDate={content.publishDate}
		heroImage={content.heroImage}
		alt={content.alt}
		text={content.text}
		id={content.id}
	/>
</BasePage>
