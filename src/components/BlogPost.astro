---
import Author from './Author.astro';
import { Picture } from "astro-imagetools/components";
import { parse } from 'node-html-parser';

export interface Props {
	title: string;
	author: string;
	publishDate: string;
	heroImage: string;
	alt: string;
	text: string;
}

const { title, author, publishDate, heroImage, alt, text } = Astro.props;

const parsed_post = parse(text);

---

<div class="layout">
	<article class="content">
		<div>
			<header>
				<!-- {heroImage && <img width="720" height="420" class="hero-image" loading="lazy" src={heroImage} alt={alt} />} -->
				<p class="publish-date">{new Date(publishDate).toLocaleString('el-gr')}</p>
				<h1 class="title">{title}</h1>
			</header>

			<main>
			<!-- <Picture
				src='https://mpompina.files.wordpress.com/2019/07/grandmother.png'
				alt='test'
				format="jpeg"
				includeSourceFormat={false}
				loading='lazy'/> -->
			{
				parsed_post.childNodes.map((v) => {
					if (v.childNodes.length > 0) {
						for (let n of v.childNodes){
							if (n.tagName == 'IMG') {
								console.log(n.getAttribute('data-orig-file'))
								return <Picture
										src={n.getAttribute('data-orig-file')}
										alt={n.getAttribute('alt')}
										height={n.getAttribute('height')}
										format={["avif"]}
										// fallbackFormat="png"
										includeSourceFormat={false}
										loading='lazy'/>
							}
						}
					}
					return v
				})
			}

			</main>
		</div>
	</article>
</div>

<style>
	.hero-image {
		width: 100vw;
		object-fit: cover;
		object-position: center;
		margin-top: 2rem;
		margin-bottom: 4rem;
		max-width: 1280px;
	}

	@media (max-width: 50em) {
		.hero-image {
			height: 260px;
			margin-top: 0;
			margin-bottom: 2rem;
		}
	}

	.content {
		margin-bottom: 8rem;
	}

	.content :global(main > * + *) {
		margin-top: 1rem;
	}

	.content :global(h2) {
		margin-top: 4rem;
	}

	header {
		display: flex;
		flex-direction: column;
		text-align: center;
		align-items: center;
		justify-content: center;

		padding-bottom: 2rem;
		margin-bottom: 2rem;
		border-bottom: 4px solid var(--theme-divider);
	}

	.title,
	.author,
	.publish-date {
		margin: 0;
	}

	.publish-date,
	.author {
		color: var(--theme-text-lighter);
	}

	.title {
		font-size: 2.25rem;
		font-weight: 700;
	}
</style>
