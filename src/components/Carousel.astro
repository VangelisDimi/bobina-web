---
import 'glider-js/glider.min.css';

let article = {
	image: 'https://mpompina.files.wordpress.com/2022/06/maxresdefault-2.jpg',
	title: 'A long article title uWu',
	link: 'https://www.google.com',
};

let content = [];

for (let i = 0; i < 3; i++) {
	content.push(article);
}
---

<script>
	import glider from 'glider-js';
	new glider(document.querySelector('.glider'), {
		dots: document.querySelector('#dots'),
		scrollLock: true,
		responsive: [
			{
				// screens greater than >= 775px
				breakpoint: 775,
				settings: {
					slidesToShow: 3,
					slidesToScroll: 3,
				},
			},
		],
	});
</script>

<style is:inline>
	.glider-dot {
		width: 50px;
		height: 8px;
		border-radius: 0px;
		background-color: white;
	}

	.glider-dot.active {
		background-color: #bf3b52;
	}
	.glider-track,
	.glider {
		scrollbar-width: none;
	}

	@-moz-document url-prefix() {
		.glider-track {
			margin-bottom: 17px;
		}
		.glider-wrap {
			overflow: hidden;
		}
	}
</style>

<div class='glider-wrap bg-black text-white py-5'>
	<div class='glider '>
		{content.map((art) => (
			<div class="flex justify-center">
				<div class="flex justify-center border-gray-400 border max-w-md">
					<a class="glider-img overflow-hidden">
						<div class="overflow-hidden max-w-60 max-h-60 mb-3">
							<img
								src={art.image}
								class="transition-transform ease-in-out hover:scale-110 object-cover w-60 h-60"
							/>
						</div>
						<h4 class="p-3">{art.title}</h4>
					</a>
				</div>
			</div>
		))}
	</div>
	<div role='tablist' id='dots' class='mt-3'></div>
</div>
