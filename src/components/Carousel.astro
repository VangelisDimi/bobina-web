---
import 'glider-js/glider.min.css';

let article = {
	image: 'https://mpompina.files.wordpress.com/2022/06/maxresdefault-2.jpg',
	title: 'Grandmother (1970) David Lynch',
	link: 'https://www.google.com',
};

let content = [];

for (let i = 0; i < 3; i++) {
	content.push(article);
}
---

<script>
	import glider from 'glider-js';
	new glider(document.querySelector('.glider'), {
		dots: document.querySelector('#dots'),
		scrollLock: true,
		responsive: [
			{
				// screens greater than >= 775px
				breakpoint: 775,
				settings: {
					slidesToShow: 3,
					slidesToScroll: 3,
				},
			},
		],
	});
</script>

<style is:inline>
	.glider-dot {
		width: 50px;
		height: 8px;
		border-radius: 0px;
		background-color: white;
	}

	.glider-dot.active {
		background-color: #b5465a;
	}
	.glider-track,
	.glider {
		scrollbar-width: none;
	}

	@-moz-document url-prefix() {
		.glider-track {
			margin-bottom: 17px;
		}
		.glider-wrap {
			overflow: hidden;
		}
	}

	.glider-track {
		padding: 0;
		margin: 0;
	}
</style>

<div class='glider-wrap bg-black text-white mt-8'>
	<div class='glider '>
		{content.map((art) => (
			<div class="flex justify-center">
				<div class="flex justify-center border-[#3D3D3D] border max-w-md">
					<a class="glider-img overflow-hidden">
						<div class="overflow-hidden max-w-[350px] max-h-[350px]">
							<img
								src={art.image}
								class="transition-transform ease-in-out hover:scale-110 object-cover w-[350px] h-[350px]"
							/>
						</div>
						<h4 class="py-4 px-2 title-medium-2">{art.title}</h4>
					</a>
				</div>
			</div>
		))}
	</div>
	<div role='tablist' id='dots' class='mt-14'></div>
</div>
