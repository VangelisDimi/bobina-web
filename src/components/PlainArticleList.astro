---
<section>

{list.map((article) => (
	<article class="py-9 first:pt-0">
		<a href={`/posts/${article.slug}`}>
			<h5 class="title-small">{article.title}</h5>
			<span class="text-overline-small">
				{article.date.toLocaleDateString('el-gr')}{' '}
				{article.categories.map((c) => c + ' ')}
			</span>
		</a>
	</article>
	<hr />
))}
</section>
